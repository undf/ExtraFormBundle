{% macro ng_model(form, name) %}
    {% set ngModel = name|default(form.vars.name) %}
    {% if form.parent %}
        {{ _self.ng_model(form.parent, form.parent.vars.name ~ '.' ~ ngModel) }}
    {% else %}
        {{ ngModel }}
    {% endif %}
{% endmacro %}

{% macro root_name(form) %}
    {% set name = form.vars.name %}
    {% if form.parent %}
        {{ _self.root_name(form.parent) }}
    {% else %}
        {{ name }}
    {% endif %}
{% endmacro %}
